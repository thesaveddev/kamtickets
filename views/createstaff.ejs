<%- include('partials/dashheader') %>

<div class="centralize" align="center">
    <div class="m-4">
        <h4>Add a New Staff</h4>
    </div>
    <div class="form-wide">
    <form action="/addstaff" method="POST">
        <div>
        <% if(message != '') { %>
            <div class="alert alert-secondary" role="alert">
        <%= message %>
        </div>
        <% } %>
        </div>

        <div class="form-group">
        <input type="text" class="form-control" name="staffname" placeholder="Full Name" required minlength="6">
        </div>
        <div class="form-group">
        <select class="form-control" name="sbu" aria-placeholder="SBU" required>
            <option value="PPP" selected>Select SBU</option>
            <option value="hq">HQ</option>
            <option value="outstation1">Outstation 1</option>
            <option value="outstation2">Outstation 2</option>
                   </select>
        </div>
        <div class="form-group">
            <select class="form-control" name="role" aria-placeholder="Role" required>
            <option value="PPP" selected>Select Staff Role</option>
            <option value="STAFF">STAFF</option>
            <option value="ADMIN">ADMIN</option>
        </select>
        </div>
        <div class="form-group">
        <input type="text" class="form-control" name="designation" placeholder="Staff Designation" required minlength="6">
        </div>
        <div class="form-group">
        <input type="email" class="form-control" name="email" placeholder="Email Address" required>
        </div>
         <div class="form-group">
        <input type="text" class="form-control" name="phone" placeholder="Phone Number (CUG Preferred)" required>
        </div>
        <div class="form-group">
        <input type="password" class="form-control" name="password" placeholder="Staff Password" required>
        </div>
        <button type="submit" class="btn btn-outline-primary">Create Staff Profile</button>
    </form>
    </div>

</div>
<%- include('partials/dashFooter') %>
