<%- include('partials/dashheader') %>

    <div class="centralize mt-4">
       <h2>Settings</h2>
       <div class="row">
        <div class="col">
            <h5>Company Settings</h5>
            <div class="settings-form">
                <form action="/company setting" method="post">
                    <div class="form-group">
                        <input name="companyname" class="form-control" type="text" placeholder="Company Name">
                    </div>
                    <div class="form-group">
                        <label for="logo">Company Logo</label>
                        <input name="logo" class="form-control" type="file">
                    </div>
                </form>
                <footer>
                    <button class="btn btn-outline-primary" type="submit">Save Setting</button>
                </footer>
            </div>
        </div>
        <div class="col">
            <h5>Theme Settings</h5>
            <div class="settings-form">
                <form action="/themesettings" method="post">
                    <div class="form-group">
                        <select class="form-control" name="secure">
                            <option value="" disabled selected>Select Theme</option>
                            <option value="true">Dark Theme</option>
                            <option value="false">Blue Theme</option>
                            <option value="false">Orange Theme</option>
                            <option value="false">Green Theme</option>
                        </select>
                    </div>
                    <footer>
                        <button class="btn btn-outline-primary" type="submit">Save Setting</button>
                    </footer>
                </form>
            </div>
        </div>
        <div class="col">
            <h5>Mail Configuration Settings</h5>
            <div class="settings-form">
                <form class="form" action="/mailsettings" method="post">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Mail Host" name="host">
                    </div>
                    <div class="form-group">
                    <input class="form-control" type="text" placeholder="Port" name="port">
                    </div>
                    <div class="form-group">
                        <select class="form-control" name="secure">
                            <option value="" disabled selected>Security Type</option>
                            <option value="true">True</option>
                            <option value="false">False</option>
                        </select>
                    </div>
                    <div class="form-group">
                    <input class="form-control" type="text" placeholder="Mail Username" name="user">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Mail Password" name="pass">
                    </div>
                    <footer>
                        <button class="btn btn-outline-primary" type="submit">Save Setting</button>
                    </footer>                
                </form>
            </div>
          </div>
      </div>
        <div>
           
        </div>
    </div>

<%- include('partials/dashFooter') %>